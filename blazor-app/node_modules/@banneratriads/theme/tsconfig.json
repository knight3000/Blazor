{
    "compilerOptions": {
      "target": "ES2017",
      "module": "ESNext",
      "moduleResolution": "node",
      "experimentalDecorators": true,   
      "emitDecoratorMetadata": true,   
      "jsx": "react",                   
      "jsxFactory": "h",                
      "strict": true,                   
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"], 
    "exclude": ["node_modules"]
  }
  